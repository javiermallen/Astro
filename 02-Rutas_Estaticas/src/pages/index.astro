---
import MainLayout from "../layouts/MainLayout.astro"
import Cards from "../components/Cards.astro"

const response = await fetch( 'https://pokeapi.co/api/v2/pokemon?limit=151' )
const data = await response.json()
---

<MainLayout title="Pokemon-Página estática">
	<h1 class="text-3xl text-center underline">Pokemon - static page</h1>
	<!-- <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-10">
		{ data.results.map( ( pokemon ) => <li>{ pokemon.name }</li> ) } 
	</ul> -->
	<section 
		aria-label="pokemon-cards"
		class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-x-6 gap-y-10 mt-5">
			{ data.results.map( ( { name, url } ) => 
				<Cards 
					name = { name }
					url = { url }
				/>
			)}
	</section>

</MainLayout>